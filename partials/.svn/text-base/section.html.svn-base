<div ng-show="isVideo"><!-- have to use ng-inclde-->

		<div ng-repeat="r in section.resource" >
	<iframe width="560" height="315" src="{{r.url}}" frameborder="0" allowfullscreen></iframe>
		</div>

</div>

<!-- for image -->
<div ng-show="isImg"><!-- have to use ng-inclde-->

	<div style="position:relative;height:400px;width: 800px;">
				<img ng-src="{{section.resource[imgUrlIndex].img}}"/>
				<div class="input-block-level" style="background-color: black;opacity: .5;color: #ffffff;padding: 3px; position:absolute;bottom:0px;">{{section.resource[imgUrlIndex].text}}</div>
	</div>
	<br/><br/>
	<button class="btn btn-success" type="submit" ng-click="nextImage()">next</button>
	
</div>